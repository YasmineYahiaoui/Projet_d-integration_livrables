<Window x:Class="application_bureau_yasmine_linda_hatim_sofiane.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:application_bureau_yasmine_linda_hatim_sofiane"
        mc:Ignorable="d"
        Title="AddClientWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <StackPanel>
            <Grid Margin="5">
                <TextBox x:Name="FirstNameTextBox" />
                <TextBlock Text="First Name" IsHitTestVisible="False" 
                     Foreground="Gray" Margin="5,0,0,0"
                     VerticalAlignment="Center" 
                     Visibility="{Binding Text, ElementName=FirstNameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <Grid Margin="5">
                <TextBox x:Name="LastNameTextBox" />
                <TextBlock Text="Last Name" IsHitTestVisible="False" 
                     Foreground="Gray" Margin="5,0,0,0"
                     VerticalAlignment="Center" 
                     Visibility="{Binding Text, ElementName=LastNameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <Grid Margin="5">
                <TextBox x:Name="EmailTextBox" />
                <TextBlock Text="Email" IsHitTestVisible="False" 
                     Foreground="Gray" Margin="5,0,0,0"
                     VerticalAlignment="Center" 
                     Visibility="{Binding Text, ElementName=EmailTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <Grid Margin="5">
                <TextBox x:Name="PhoneTextBox" />
                <TextBlock Text="Phone Number" IsHitTestVisible="False" 
                     Foreground="Gray" Margin="5,0,0,0"
                     VerticalAlignment="Center" 
                     Visibility="{Binding Text, ElementName=PhoneTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <Button Content="Add Client" Width="100" Height="30" Margin="5" Click="AddClientButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
