<UserControl x:Class="GestionMedicale.PatientSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionMedicale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFFFF">
        <!-- Client Selection ComboBox -->
        <ComboBox x:Name="ClientComboBox" Margin="300,10,282,411" 
              DisplayMemberPath="FullName" SelectedValuePath="Email"/>

        <Grid Margin="10,60,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Left Column -->
            <StackPanel Grid.Column="0" Margin="10">
                <Border Background="White" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Patient Type" FontSize="16" Margin="0,0,0,10"/>
                        <ComboBox x:Name="PatientTypeComboBox">
                            <ComboBoxItem Content="Regular" Foreground="Green"/>
                            <ComboBoxItem Content="Priority"/>
                            <ComboBoxItem Content="Emergency" Foreground="Red"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Contact Preferences" FontSize="16" Margin="0,0,0,10"/>
                        <CheckBox x:Name="EmailCheckBox" Content="Email"/>
                        <CheckBox x:Name="SMSCheckBox" Content="SMS"/>
                        <CheckBox x:Name="PhoneCheckBox" Content="Phone"/>
                    </StackPanel>
                </Border>
                <Button Content="View All Clients" Width="150" Height="40" Background="#4DB6AC" Foreground="White" 
                BorderThickness="0" Click="ViewAllClientsButton_Click"/>
            </StackPanel>
            <!-- Right Column -->
            <StackPanel Grid.Column="1" Margin="10">
                <Border Background="White" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Language" FontSize="16" Margin="0,0,0,10"/>
                        <RadioButton x:Name="EnglishRadioButton" Content="English"/>
                        <RadioButton x:Name="FrenchRadioButton" Content="French"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Doctor's Notes" FontSize="16" Margin="0,0,0,10"/>
                        <TextBox x:Name="DoctorNotesTextBox" Height="100"/>
                    </StackPanel>
                </Border>
                <Button Content="Save" Width="150" Height="40" Background="#4DB6AC" Foreground="White" 
                    HorizontalAlignment="Center" Margin="10" BorderThickness="0" Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
