<UserControl x:Class="GestionMedicale.faqPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionMedicale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" Margin="0,0,10,0">
                <StackPanel>

                    <TextBlock Text="The Medical Record Management System (MRMS) is a comprehensive digital solution designed to streamline patient care and administrative tasks for medical professionals..."
                 TextWrapping="Wrap" 
                 FontSize="16" 
                 Margin="0,0,0,20"/>


                    <TextBlock Text="Frequently Asked Questions" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 Margin="0,20,0,10"/>


                    <TextBlock Text="Q1: Why was the Medical Record Management System (MRMS) created?" 
                 FontSize="18" 
                 FontWeight="Bold" 
                 Margin="0,10,0,5"/>
                    <TextBlock Text="MRMS was developed to streamline patient record management..." 
                 FontSize="16" 
                 TextWrapping="Wrap" 
                 Margin="0,0,0,10"/>
                    <TextBlock Text="Q2: What goals does the MRMS aim to achieve for the future?" 
                 FontSize="18" 
                 FontWeight="Bold" 
                 Height="31" Width="858"/>
                    <TextBlock Text="Currently, MRMS is designed for doctors and administrators to manage patient records..." 
                 FontSize="16" 
                 TextWrapping="Wrap" 
                 Margin="0,0,0,10"/>


                    <TextBlock Text="Submit a New Question" 
                 FontSize="18" 
                 FontWeight="Bold" 
                 Margin="0,20,0,10"/>

                    <TextBox x:Name="NewQuestionTextBox" 
               Width="400" 
               Height="30" 
               Margin="0,0,0,10" 
               Text="Type your question here..."
               Foreground="Gray"
               GotFocus="NewQuestionTextBox_GotFocus"
               LostFocus="NewQuestionTextBox_LostFocus" />

                    <Button Content="Submit Question" 
              Width="150" 
              Height="30" 
              Click="SubmitQuestion_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
