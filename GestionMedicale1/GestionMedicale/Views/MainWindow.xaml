<Window x:Class="GestionMedicale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionMedicale"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="96*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="10 0 0 10" Grid.ColumnSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA9AD" Offset="0"/>
                    <GradientStop Color="#3AADA1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Canvas>

                </Canvas>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Sign Up" Style="{StaticResource titleText}"/>
                    <TextBlock Text="Are you new ? Create new account to connect us" Style="{StaticResource normalText}" Opacity="0.8" Margin="20 30" />
                    <Button Content="Sign up" Style="{StaticResource button}" Click="login_Click"  />
                </StackPanel>

            </Grid>


        </Border>

        <Border Background="#ffffff" Grid.Column="2" CornerRadius="0 10 10 0">
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <TextBlock Text="Sign in to MRMS" Style="{StaticResource titleText}" Foreground="#3AB19B" RenderTransformOrigin="0.507,-1.065" />


                <Border Background="#ffffff" Grid.Column="1" CornerRadius="0 10 10 0">
                    <StackPanel VerticalAlignment="Center">


                        <Label Content="Username" Style="{StaticResource lbl}" />
                        <TextBox x:Name="txtUser" Style="{StaticResource textBox}"/>
                        <Label Content="Password" Style="{StaticResource lbl}"/>
                        <PasswordBox x:Name="txtPassword" Style="{StaticResource PasswordBox}"/>
                        <Button Content="Login" Margin="0 20 0 0" x:Name="Login" Click="Connecter_Click" Style="{StaticResource mainbutton}"/>
                        <Label Content="" x:Name="infos" Foreground="Red" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

    </Grid>
</Window>
